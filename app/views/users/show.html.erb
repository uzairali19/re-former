<div class="container mt-5">
  <div class="card">
    <div class="card-body">
      <center>
        <h5 class="card-title">Username: <%= @user.username %></h5>
      </center>
      
      <p class="card-text text-center">Email: <%= @user.email %></p>
      <div class="d-flex justify-content-center">
      <center><%= link_to "Edit", edit_user_path(@user), :class => 'btn btn-primary mr-4' %></center>
      <center><%= link_to "Destroy", user_path(@user), method: :delete, data: { confirm:
    "Are you sure?" }, :class => 'btn btn-danger' %></center>
    </div>
    </div>
  </div>
  <%= link_to "Back", users_path %>
</div>